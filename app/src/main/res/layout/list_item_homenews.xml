<LinearLayout android:id="@+id/container_list_item"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.example.weibo.HomeFragment"
              tools:ignore="MergeRootFrame"
               android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:background="@android:color/white"

    >

    <LinearLayout
        android:id="@+id/title_item_top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >
        <!-- item的标题 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_lvitem_homenews_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textSize="18dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- item的作者、时间. -->
                <TextView
                    android:id="@+id/tv_lvitem_homenews_author"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="screen_name"/>

                <TextView
                    android:id="@+id/tv_lvitem_homenews_timeAndWhere"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="when and from where"

                    />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_lvitem_homenews_figure"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:background="@color/colorAccent"
            android:src="@null"/>
    </LinearLayout>

    <!-- 正文 -->

    <TextView
        android:id="@+id/tv_lvitem_homenews_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="text"/>

</LinearLayout>